<html>
<title>CEM: Universities</title>

<!-- Using the show eye and hide eye for password, also the Twitter button -->
<script src="https://kit.fontawesome.com/962d9b3821.js" crossorigin="anonymous"></script>

<style>
  body {
    background-image: url("../images/EventDetailsBackground.jpg");
    background-size: cover;
  }

  /* Setting dimensions and styling the "CREATE UNIVERSITY" background */
  #createUniversity {
    align-items: center;
    background-color: #C5C7C8;
    border: 3px solid #FEF3B3;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    position: absolute;
    text-align: center;
    transform: translate(-103%, -46%);

    height: 600px;
    width: 450px;

    left: 50%;
    top: 50%;

    overflow: auto;
  }

  /* Setting and styling the "CREATE EVENTS" and "CURRENT EVENTS" titles */
  #eventsTitle {
    align-items: center;
    background-color: #FEF3B3;
    border-radius: 6px;
    color: #000000;
    display: flex;
    font-size: 18pt;
    font-weight: bold;
    justify-content: center;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    padding-bottom: 0.5em;
    padding-top: 0.5em;

    height: 50px;
    width: 380px;
  }

  #maintitleFormat {
    align-items: center;
    background-color: #FEF3B3;
    border-radius: 6px;
    color: #000000;
    display: flex;
    font-size: 40pt;
    font-weight: bold;
    justify-content: center;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    transform: translateX(-50%, -50%);

    height: 70px;
    width: 400px;
    border: 2px solid #C5C7C8;
    white-space: nowrap;
    overflow: hidden;
  }
  #nameField text, #locationField text, #descriptionField text, #populationField text {
    color: #000000;
    display: inline-block;
    font-size: 11pt;
    text-align: right;
    width: 120px;
    white-space: nowrap;
  }        
  #name, #location, #description, #population {
    color: #656565;
    border: none;
    border-radius: 4px;
    margin-bottom: 0.5em;
    margin-right: 1em;
    text-align: left;
    text-indent: 6px;

    height: 30px;
    width: 270px;
  }
  #name:focus, #location:focus, #description:focus, #population:focus {
    outline: none;
  }
  #name::placeholder, #location::placeholder, #description::placeholder, #population::placeholder{
    color: #656565;
    background-color: #FBFBFB;
    border: none;
    border-radius: 4px;
    margin-bottom: 0.5em;
    margin-right: 1em;
    text-align: left;
  }

  /* Setting and styling the university photo */
  #University img {
    margin-top: 0.6em;

    height: 253px;
  }

  /* Setting and styling the "CREATE" button */
  #createButton {
    background-color: #5cb85c;
    border: none;
    border-radius: 8px;
    color: #FFFFFF;
    font-size: 18pt;
    margin-bottom: 1.5em;
    margin-top: 0.5em;
    position: absolute;
    text-align: center;
    transform: translateX(-50%);

    left: 196px;
    top: 510px;

    height: 35px;
    width: 330px;
  }
  /* Changing the "SIGN IN" button color when hovered over */
  #createButton:hover {
    background-color: #51a151 ;
  }

  /* Setting and Styling the Twitter button */
  #twitterButton {
    background-color: #1DA1F2;
    border-radius: 8px;
    font-size: 14pt;
    margin-top: 0.5em;
    outline: none;
    position: absolute;
    transform: translateX(-50%);

    left: 390px;
    top: 512px;

    height: 37px;
  }
  /* Changing the Twitter button color when hovered over */
  #twitterButton:hover {
    background-color: #1a98e6;
  }

  /* Setting dimensions and styling the "CURRENT EVENTS" background */
  #currentUniversitiesBackground {
    align-items: center;
    background-color: #C5C7C8;
    border: 3px solid #FEF3B3;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    padding-bottom: 2em;
    position: absolute;
    text-align: center;
    transform: translate(3%, -46%);

    height: 600px;
    width: 450px;

    left: 50%;
    top: 50%;

    overflow: auto;
  }

  /* Styling the individual events title in the "CURRENT EVENTS" */
  #postedName {
    color: #000000;
    background-color: #FEF3B3;
    display: block;
    font-size: 12pt;
    font-weight: bold;
    margin-bottom: 0.5em;
    text-align: center;
    text-transform: uppercase;
  }

  /* Styling the individual events in the "CURRENT EVENTS" */
  #individualEventOutline {
    border: 3px solid #FEF3B3;
    border-radius: 6px;
    color: #000000;
    margin-bottom: 0.5em;
    text-align: left;

    width: 380px;
  }

  /* Adding spaces in between individual events in the "CURRENT EVENTS" */
  #grid-container {
    display: grid;
    grid-template-columns: 142px auto;
  }

  /* Styling the "CURRENT EVENTS" fields */
  #grid-item-fields {
    font-weight: bold;
    font-size: 10pt;
    margin-left: 1.5em;
  }
</style>

<%= include partials/header.ejs %>

 <body>
  <center><h1><text id="maintitleFormat">UNIVERSITIES</text></h1><center>
  <div class = "aContainer" >
    <h1> <% if (message.length > 1) %><%= message %></h1>
  </div>
  
  <div id="wrappingBackground">
    <div id="createUniversity">
      <text id="eventsTitle">CREATE UNIVERSITY</text>
      <form class="form" action="/universities" method="post">
        <div id="nameField">
          <text>NAME:</text>
          <input id="name" type="text" name="name" placeholder="NAME">
        </div>
        <div id="locationField">
          <text>LOCATION:</text>
          <input id="location" type="text" name="location" placeholder="LOCATION">
        </div>
        <div id="descriptionField">
          <text>DESCRIPTION:</text>
          <input id="description" type="text" name="description" placeholder="DESCRIPTION">
        </div>
        <div id="populationField">
          <text>STUDENT POP:</text>
          <input id="population" type="text" name="population" placeholder="STUDENT POP">
        </div>
        <div id="University">
          <img src="images/University.png" alt="UniversityPhoto">
        </div>
        <button id="createButton" type="submit">CREATE</button>
        <a href="#"
          onclick="window.open('https://twitter.com/intent/tweet?text=I+just+registered+for+College+Event+Manager%21+http%3A%2F%2Flocalhost%3A3000%2Fregister', 'newwindow', 'width=600, height=250'); return false;">
          <button id="twitterButton" class="btn btn-info"><i class="fa fa-twitter"></i></button>
        </a>
      </form> 
    </div>
    <div id="currentUniversitiesBackground">
      <text id="eventsTitle">CURRENT UNIVERSITIES</text>
      <% for(var i = 0; i < unis.length; i++) { %>
        <div id="individualEventOutline">
          <div id="postedName"><%= unis[i].University_Name %></div>
          <div id="grid-container">
            <div id="grid-item-fields">LOCATION:</div>
            <div><%= unis[i].Location %></div>
            <div id="grid-item-fields">DESCRIPTION: </div>
            <div><%= unis[i].Description%></div>
            <div id="grid-item-fields">STUDENT POP: </div>
            <div><%= unis[i].Student_Population%></div>
          </div>          
        </div>                                             
      <%}%>
    </div>  
  </div>
</body>
</html>

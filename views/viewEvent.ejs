<html>

<style>
  textarea.html-text-box 
  {
    background-color:#ffffff;
    background-repeat:no-repeat;
    background-attachment:fixed;
    border-width:1;
    border-style:solid;
    border-color:#cccccc;
    font-family:Arial;
    font-size:14pt;
    color:#000000;
  }
  input.html-text-box 
  {
    background-color:#ffffff;
    font-family:Arial;
    font-size:14pt;
    color:#000000;
  }
  .rating-wrapper {
      overflow: hidden;
      margin-right: 40%;
      margin-bottom: 10px;
      }
  .rating-input {
      position: absolute;
      top: -5px;
      left: 0;
      }
  .rating-star:hover,
  .rating-star:hover ~ .rating-star {
      background-position: 0 0;
      }
  .rating-wrapper:hover .rating-star:hover,
  .rating-wrapper:hover .rating-star:hover ~ .rating-star,
  .rating-input:checked ~ .rating-star {
        background-position: 0 0;
      }
  .rating-star,
  .rating-wrapper:hover .rating-star {
      float: right;
      display: block;
      width: 16px;
      height: 16px;
      background: url('http://css-stars.com/wp-content/uploads/2013/12/stars.png') 0 -16px;
      }
  .left{
    margin-left: 150px;
    margin-top: 50px;
    margin-bottom: 150px;
    float: left;
  }
  .right{
    margin-right: 30%;
    margin-top: 35px;
    margin-bottom: 150px;
    float: right;
  }
  .top{
    min-width: 350px;

    padding-top: 10px;
    padding-bottom: 10px;
    margin-top: 5px;
    margin-left: 40px;
    margin-right: 40px;

    border: 2px;
    border-style: solid;
    border-color: #7ec0ee;
    border-radius: 10px;

    background-color: #d3d3d3;
  }
  .left{
    width: 30%;
    height: 400px;
    min-width: 350px;
    float: left;

    padding-top: 10px;
    padding-bottom: 10px;
    margin-top: 5px;
    margin-left: 40px;

    border: 2px;
    border-style: solid;
    border-color: #7ec0ee;
    border-radius: 10px;

    background-color: #d3d3d3;
  }

  .right{    
    width: 30%;
    height: 400px;
    min-width: 350px;
    float: right;

    padding-top: 10px;
    padding-bottom: 10px;
    margin-top: 5px;
    margin-right: 40px;



    border: 2px;
    border-style: solid;
    border-color: #7ec0ee;
    border-radius: 10px;

    background-color: #d3d3d3;

    overflow: auto;
  }
</style>

<%= include partials/header.ejs %>


    <body>
       <center><u><h1>Event Details</h1></u><center></br>

          <div class = "viewEvent">
            <div class = "top">
                    
              <h3>
                Name: <%= events[0].Name %>
              </h3>
       
                <h4>
                  <le>Description: <%= events[0].Description %></le>                  
                  <le>Time: <%= events[0].Time %></le>       
                  <le>Date: <%= events[0].Date %></le>
                <h4>  

                <h6>                        
                  <le>Location: <%= events[0].Location %></le>                                           
                  <le>Contact Phone: <%= events[0].Phone %></le>                
                  <le>Contact Email: <%= events[0].Email %></le>   
                </h6>
              </div>
              <div class="left">

                <center><u><h1>Add Review</h1></u><center></br>
                
                <form method="post" action=" " >
                  <div class="rating-wrapper">
                    <input type="radio" class="rating-input" id="rating-input-1-5" name="rating5"/>
                    <label for="rating-input-1-5" class="rating-star"></label>
                    <input type="radio" class="rating-input" id="rating-input-1-4" name="rating4"/>
                    <label for="rating-input-1-4" class="rating-star"></label>
                    <input type="radio" class="rating-input" id="rating-input-1-3" name="rating3"/>
                    <label for="rating-input-1-3" class="rating-star"></label>
                    <input type="radio" class="rating-input" id="rating-input-1-2" name="rating2"/>
                    <label for="rating-input-1-2" class="rating-star"></label>
                    <input type="radio" class="rating-input" id="rating-input-1-1" name="rating1"/>
                    <label for="rating-input-1-1" class="rating-star"></label>
                 </div>

                
                  <textarea name="comments" cols="30" rows="3" class="html-text-box" placeholder = "Comment here..."></textarea>
                  <br><br>
                  <input type="submit" value="Submit" class="btn btn-success">
                  <input type="reset" value="Reset" class="btn btn-danger">            
                </form>

              </div>

              <div class="right">

                <center><u><h1>Reviews</h1></u><center></br>

                <ul>
                  <% for(var i=0; i < comments.length; i++) { %>
                    <form method = "post" action = "/deletecomment/<%= comments[i].id %>">  
                      <input type="submit" class="btn btn-danger" value="X" style = "float: left;">
                         <h3>
                              <le>Username: <%= comments[i].owner %></le>
                         </h3>
                         <h4>
                              <le>Stars: <%= comments[i].rating %></le>
                         </h4>
                         <h4>
                              <le>Comment: <%= comments[i].commentString %><br><br></le>
                         </h4>
                    </form>

                  <% } %>
                </ul>
                

              </div>

          </div> 
      </body>
</html>

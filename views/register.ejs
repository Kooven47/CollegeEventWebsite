<html>
<title>College Event Manager</title>
<head>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  <!-- AngularJS and its route -->
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.js"></script>
  <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyCYEiUAFh3-Ca91pCPgn8a-DFX7OEL8GZQ"></script>

  <!-- Using the show and hide eye for password -->
  <script src="https://kit.fontawesome.com/962d9b3821.js" crossorigin="anonymous"></script>

  <meta property="og:title" content="I just registered for College Event Manager!"/>
  <meta property="og:site_name" content="College Event Manager"/>
  <script type="text/javascript" src="https://platform-api.sharethis.com/js/sharethis.js#property=64227370ff8036001a234afc&product=inline-share-buttons&source=platform" async="async"></script>
  
  <!-- Function to show and hide password -->
  <script>
    $(document).ready(function()
    {
      $(".show-password").click(function()
      {
        var passwordField = $("#password");
        var icon = $(".show-password");

        if (passwordField.attr("type") === "password")
        {
          passwordField.attr("type", "text");
          icon.removeClass("fa-eye").addClass("fa-eye-slash");
        }
        else
        {
          passwordField.attr("type", "password");
          icon.removeClass("fa-eye-slash").addClass("fa-eye");
        }
      });
    });
  </script>
    
  <style>
    /* Setting dimensions and styling the signin background */
    #signupBackground {
      align-items: center;
      background-color: #C5C7C8;
      border-radius: 10px;
      display: flex;
      flex-direction: column;
      position: absolute;
      text-align: center;
      transform: translate(-50%, -50%);

      height: 472px;
      width: 354px;

      left: 50%;
      top: 50%;
    }

    /* Setting and styling the background of the toggle bar */
    #collegeEventManager {
      align-items: center;
      background-color: #F1E6AD;
      border-radius: 10px;
      color: #000000;
      display: flex;
      font-size: 14pt;
      font-weight: bold;
      justify-content: center;
      margin-top: 1.5em;
      margin-bottom: 0.5em;
      transform: translateX(-50%, -50%);

      height: 50px;
      width: 299px;
    }

    /* Setting and styling the username and password field */
    #nameField text, #emailField text, #usernameField text, #passwordField text {
      color: #000000;
      display: inline-block;
      margin-left: 1em;
      text-align: 10px;
      width: 100px;
    }
    #name, #email, #username, #password {
      color: #000000;
      background-color: #FBFBFB;
      border: none;
      border-radius: 6px;
      margin-bottom: 0.5em;
      margin-right: 1.4em;
      text-align: left;

      height: 30px;
      width: 200px;
    }
    /* Removing the "focus ring" when the username and password field is clicked */
    #name:focus, #email:focus, #username:focus, #password:focus {
      outline: none;
    }
    /* Setting and styling the show and hide eye password icon */
    #eyeIcon {
      color: #000000;
      margin-top: 1.15em;
      right: 2.5em;
      position: absolute;
      transform: translateY(-50%);
      cursor: pointer;
    }

    /* Styling the error message (if there is one) */
    #errorMessage {
      color: rgb(255, 0, 0);
      font-size: 10pt;
      white-space: nowrap;
    }

    /* Setting and styling the "SIGN IN" button */
    #signupButton {
      background-color: #FEF3B3;
      border: none;
      border-radius: 12px;
      color: #000000;
      cursor: pointer;
      font-size: 18pt;
      margin-top: 0.5em;
      text-align: center;

      height: 37px;
      width: 299px;

      position: absolute;
      top: 390px;
      left: 50%;
      transform: translateX(-50%);
    }
    /* Changing the "SIGN IN" button color when hovered over */
    #signupButton:hover {
      background-color: #F1E6AD ;
    }
  </style>
</head>

<body>
  <center>
    <div id="signupBackground">
      <text id="collegeEventManager">COLLEGE EVENT MANAGER</text>
      <form id="signupForm" class="form"  action="/register" method="post">
        <div id="nameField">
          <text>FULL NAME:</text>
          <input id="name" type="text" name="name" placeholder="                FULL NAME">
        </div>
        <div id="emailField">
          <text>EMAIL:</text>
          <input id="email" name="email" type="text" placeholder="            EMAIL ADDRESS">
        </div>
        <div id="usernameField">
          <text>USERNAME:</text>
          <input id="username" name="username" type="text" placeholder="                USERNAME">
        </div>
        <div id="passwordField">
          <text>PASSWORD:</text>
          <input id="password" name="password" type="password" autocomplete="off" placeholder="                PASSWORD">
          <i id="eyeIcon" class="fa fa-eye show-password"></i>
       </div>
        <LABEL>University: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</LABEL>
        <select name = "uni"> <%for (var i = 0; i < uni.length; i++){%> <option value= "<%=uni[i].University_Name%>"> <%=uni[i].University_Name%> <% } %></select>
        <div id="errorMessage" class = "aContainer">
          <text> <% if (message.length > 0) %> <%= message %></text>
        </div>
        <button id="signupButton" type="submit" class="btn btn-success">SIGN UP</button>
        <div class="sharethis-inline-share-buttons"></div>
      </form>
    </div>
  </center>
</body>
</html>
<%= include partials/header.ejs %>

<head>
  <meta property="og:title" content="I just left a comment for an event on College Event Manager!"/>
  <meta property="og:site_name" content="College Event Manager"/>
</head>
    <body>
       <center><h1><text id="EventDetailsFormat">Event Details</text></h1><center></br>
          <div class = "viewEvent">
            <div class="top">
            </div>
              <div class="left">
                <center><h1><text id="titleFormat">Reviews</text></h1><center></br>
                  <ul>
                    <% for (var i = 0; i < comments.length; i++) { %>
                      <% if (comments[i].owner == currentUser) { %>
                      <form method = "post" action = "/deletecomment/<%= comments[i].id %>">
                        <input type="submit" class="btn btn-danger" value="X" style = "float: left;">
                        <% } %>
                           <h3>
                                <le>Username: <%= comments[i].owner %></le>
                           </h3>
                           <h4>
                            <le>Rating:</le>
                            <% for (let j = 0; j < comments[i].rating; j++) { %>
                              <span class="star">&#9733;</span>
                            <% } %>
                           </h4>
                           <h4>
                                <le>Comment: <%= comments[i].commentString %><br></le>
                           </h4>
                      </form>
                      <!-- <button type="button" class="btn btn-danger" value="M" style = "float: left;"> -->
                        <% if (comments[i].owner == currentUser) { %>
                          <input type="button" value = "Modify" class="btn" data-comment-id="<%= comments[i].id %>" onclick="showEdit(this)"><br><br>
                        <% } else{%>
                        
                          <br>
                        <% } %>
                        <script>
                          function showEdit(button) {
                            var commentId = button.getAttribute("data-comment-id");
                            var div = document.getElementById("edit-form-" + commentId);
                            // editForm.style.display = "block";
                            if (div.style.display === "none") {
                              div.style.display = "block";
                            } else {
                              div.style.display = "none";
                            }
                          }
                        </script>
                      <form method = "post" action = "/modifycomment/<%= comments[i].id %>">
                        <div id='edit-form-<%= comments[i].id %>' style = "display: none;">
                        <textarea name="comments" cols="30" rows="3" class="html-text-box" placeholder="Comment here..."><%= comments[i].commentString %></textarea>
                        <br><br>
                        <input type="submit" value="Save" class="btn btn-success">
                        <input type="reset" value="Clear" class="btn btn-danger">
                        </div>
                      </form>
                    <% } %>
                  </ul>
              </div>
                
              <div class="right">
                <center><h1><text id="titleFormat">Add Review</text></h1><center></br>
                
                  <form method="post" action=" " onsubmit="return validateForm()">
                    <div class="rating-container">
                    <div class="rating">
                      <input type="radio" id="star5" name="rating" value="5" />
                      <label for="star5">5 stars</label>
                      <input type="radio" id="star4" name="rating" value="4" />
                      <label for="star4">4 stars</label>
                      <input type="radio" id="star3" name="rating" value="3" />
                      <label for="star3">3 stars</label>
                      <input type="radio" id="star2" name="rating" value="2" />
                      <label for="star2">2 stars</label>
                      <input type="radio" id="star1" name="rating" value="1" />
                      <label for="star1">1 star</label>
                    </div>
                    </div>
                    <textarea name="comments" cols="50" rows="7" class="html-text-box" placeholder = "Comment here..." style="resize: none;"></textarea>
                    <br><br>
                    <input type="submit" value="Submit" class="btn btn-success" style="margin-bottom:8px">
                    <input type="reset" value="Clear" class="btn btn-danger" style="margin-bottom:8px">
                    <div class="sharethis-inline-share-buttons">
                      <a href="#"onclick="window.open('https://twitter.com/intent/tweet?text=I+just+reviewed+an+event+on+College+Event+Manager%21+http%3A%2F%2Flocalhost%3A3000%2Fevents%2F', 'newwindow', 'width=600, height=250'); return false;">
                        <button id="twitterButton" class="btn btn-info"><i class="fa fa-twitter"></i> Post on Twitter</button>
                      </a>
                    </div>            
                  </form>

                  <script>
                    // This makes sure the form is submitted with a star rating
                    function validateForm() {
                      var rating = document.getElementsByName("rating");
                      
                      var isValid = true;
                  
                      for (var i = 0; i < rating.length; i++) {
                        if (rating[i].checked) {
                          isValid = true;
                          break;
                        } else {
                          isValid = false;
                        }
                      }
                  
                      if (!isValid) {
                        alert("Please include a rating.");
                        return false;
                      }
                    }
                  </script>

              </div>

              <div class="center">
                <div id="individualEventOutline">
                  <div id="eventFormat"><%= events[0].Name %></div>
                  <div id="grid-container">
                    <div id="grid-item-fields">PERMISSION:</div>
                    <%= events[0].Level == 0 ? "Public" : events[0].Level == 1 ? "Private" : "RSO" %>
                    <% if(events[0].Level != 0) {%>              
                      <div id="grid-item-fields">UNIVERSITY:</div>
                      <div><%= events[0].University_Name %></div>
                    <%}%>
                    <div id="grid-item-fields">START TIME:</div>
                    <div><%= events[0].startTime.toLocaleString() %></div>
                    <div id="grid-item-fields">END TIME:</div>
                    <div><%= events[0].endTime.toLocaleString() %></div>
                    <div id="grid-item-fields">LOCATION:</div>
                    <div><%= events[0].Location %></div>
                    <div id="grid-item-fields">EMAIL:</div>
                    <div><%= events[0].Email %></div>
                    <div id="grid-item-fields">PHONE #:</div>
                    <div><%= events[0].Phone %></div>
                    <div id="grid-item-fields">DESCRIPTION: </div>
                    <div><%= events[0].Description%></div>
                    <div id="grid-item-fields">CATEGORY:</div>
                    <div><%= events[0].Type %></div>
                  </div>
                </div>
                <div id="GarageSale">
                  <img src="../images/GarageSale.png" alt="GarageSalePhoto">
                </div>
              </div>
          </div> 
      </body>
</html>

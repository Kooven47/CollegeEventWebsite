<html>

<style>
  body {
    background-image: url("../images/EventDetailsBackground.jpg");
    background-size: cover;
  }
  
  input,button, label,textarea 
  {
    width: 40%;
  }  
  
  .newUni{
    width: 45%;
    height: 450px;
    min-width: 450px;
    float: left;

    padding-top: 10px;
    padding-bottom: 10px;
    margin-top: 5px;
    margin-left: 30px;

    border: 3px;
    border-style: solid;
    border-color: #FEF3B3;
    border-radius: 10px;

    background-color: #C5C7C8;
  }
  .viewUnis{    
    width: 45%;
    height: 450px;
    min-width: 450px;
    float: right;

    padding-top: 10px;
    padding-bottom: 10px;
    margin-top: 5px;
    margin-right: 30px;

    border: 3px;
    border-style: solid;
    border-color: #FEF3B3;
    border-radius: 10px;

    background-color: #C5C7C8;

    overflow: auto;
  }
  .container{
    margin-bottom: 80px;
  }
  .aContainer{
        color: red;
      }
  #titleFormat{
    align-items: center;
    background-color: #FEF3B3;
    border-radius: 6px;
    color: #000000;
    display: flex;
    font-size: 20pt;
    font-weight: bold;
    justify-content: center;
    margin-top: 1.5em;
    margin-bottom: 1.5em;
    transform: translateX(-50%, -50%);

    height: 50px;
    width: 80%;
  }
  #maintitleFormat{
    align-items: center;
    background-color: #FEF3B3;
    border-radius: 6px;
    color: #000000;
    display: flex;
    font-size: 40pt;
    font-weight: bold;
    justify-content: center;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    transform: translateX(-50%, -50%);

    height: 70px;
    width: 400px;
    border: 2px solid #C5C7C8;
    white-space: nowrap;
    overflow: hidden;
    
  }
  #nameField text, #locationField text, #descriptionField text, #populationField text{
    color: #000000;
    display: inline-block;
    text-align: right;
    width: 25%;
    white-space: nowrap;
  }        
  #name, #location, #description, #population{
    color: #656565;
    border: none;
    border-radius: 4px;
    margin-bottom: 0.5em;
    margin-right: 1em;
    text-align: left;
    text-indent: 6px;

    height: 30px;
    width: 290px;
  }
  #name:focus, #location:focus, #description:focus, #population:focus{
    outline: none;
  }
  #name::placeholder, #location::placeholder, #description::placeholder, #population::placeholder{
    color: #656565;
    background-color: #FBFBFB;
    border: none;
    border-radius: 4px;
    margin-bottom: 0.5em;
    margin-right: 1em;
    text-align: left;
  }
  #createButton {
      background-color: #FEF3B3;
      border: none;
      border-radius: 8px;
      color: #000000;
      cursor: pointer;
      font-size: 18pt;
      margin-top: 1.5em;
      text-align: center;

      height: 37px;
      width: 299px;
      
    }
    /* Changing the "SIGN IN" button color when hovered over */
    #createButton:hover {
      background-color: #F1E6AD ;
    }
</style>


<%= include partials/header.ejs %>

 <body>
  <center><h1><text id="maintitleFormat">Universities</text></h1><center></br>
  <div class = "aContainer" >
          <h1> <% if (message.length > 1) %>
                <%=    message   %>
          </h1>
  </div>
  
    <div class = "container">
      <div class = "newUni">
        <center><h1><text id="titleFormat">New University</text></h1><center></br>
          <form class="form"  action="/universities" method="post">              
              <div class="form-group">
                  <div id="nameField">
                    <text>University Name:</text>
                    <input id="name" type="text" name="name" placeholder="UNIVERSITY NAME">
                  </div>
                  <div id="locationField">
                    <text>Location:</text>
                    <input id="location" type="text" name="location" placeholder="LOCATION NAME">
                  </div>
                  <div id="descriptionField">
                    <text>Description:</text>
                    <input id="description" type="text" name="description" placeholder="DESCRIPTION NAME">
                  </div>
                  <div id="populationField">
                    <text>Student Population:</text>
                    <input id="population" type="text" name="population" placeholder="POPULATION COUNT">
                  </div>
              </div>
              
              
              <button id="createButton" type="submit">CREATE</button>
              
          </form> 
      </div>

      <div class = "viewUnis">

        <aside>
          <center>
            <h1 style="margin-bottom: 30px;"><text id="titleFormat">Posted Universities</text></h1>
          </center>
          <div class="universities">
            <ul>
              <% for(var i=0; i < unis.length; i++) { %>
                <div style="text-align:left;" >
                  <h3 style="padding-left: 33px;" ><li style="padding-left: 33px;"><b>Name:</b> <%= unis[i].University_Name %></li></h3>
                  <ul style="list-style: none;">
                    <h4 style="padding-left: 33px;">
                      <li style="padding-left: 33px;"><b>Location:</b> <%= unis[i].Location %></li>
                      <li style="padding-left: 33px;"><b>Description:</b> <%= unis[i].Description %></li>                                   
                      <li style="padding-left: 33px;"><b>Student Population:</b> <%= unis[i].Student_Population %></li>                                                    
                    </h4>
                  </ul>
                </div>
              <% } %>
            </ul>
          </div>
        </aside>

      </div>  

    </div>
  </body>
</html>
